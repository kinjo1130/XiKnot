---
import '../styles/global.css';
import Header from '../components/Header';
import Footer from '../components/Footer';

interface Props {
  title: string;
  description?: string;
}

const { title, description = '株式会社XiKnotの公式ウェブサイトです。' } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | 株式会社XiKnot</title>
  </head>
  <body class="min-h-screen flex flex-col bg-bg-main text-gray-900">
    <Header client:load />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
